<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_translucent"
    android:clickable="true"
    tools:context=".fragment.HomeIntroFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/_230sdp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:background="@drawable/less_round_corner_background"
        android:layout_marginBottom="@dimen/_24sdp"
        app:layout_constraintBottom_toTopOf="@+id/bottomNav"
        app:layout_constraintStart_toStartOf="parent">


        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="@dimen/_230sdp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:paddingTop="@dimen/_31sdp"
            android:gravity="start"
            android:paddingStart="@dimen/_16sdp"
            android:textSize="@dimen/_13sdp"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingEnd="@dimen/_16sdp"
            android:text="Welcome to your Home Page!"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvDesc"
            android:layout_width="@dimen/_230sdp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:paddingBottom="@dimen/_16sdp"
            android:gravity="start"
            android:paddingStart="@dimen/_16sdp"
            android:textSize="@dimen/_12sdp"
            android:paddingEnd="@dimen/_16sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle"
            android:text="Find your personalised feed with the latest updates from the accounts you follow."
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/ivNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/blue"
            android:includeFontPadding="false"
            android:fontFamily="@font/poppins_medium"
            app:layout_constraintTop_toTopOf="@+id/tvTitle"
            app:layout_constraintEnd_toEndOf="@+id/tvTitle"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_16sdp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>



