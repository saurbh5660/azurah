<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/_4sdp"
    android:layout_marginEnd="@dimen/_8sdp"
    android:paddingTop="@dimen/_10sdp"
    android:paddingBottom="@dimen/_18sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/round_stroke_background"
    android:backgroundTint="@color/follow_background_color">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivCross"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:src="@drawable/cross_grey_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="@dimen/_3sdp"
        android:layout_marginTop="-4dp"
        android:visibility="gone"
        android:contentDescription="@string/app_name"
        android:layout_marginEnd="@dimen/_4sdp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivProfile"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:contentDescription="@string/app_name"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/profile_icon" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:fontFamily="@font/poppins_medium"
        android:text="LifeSpring Church"
        android:maxLines="2"
        android:includeFontPadding="false"
        android:ellipsize="end"
        android:textColor="@color/black"
        android:textSize="@dimen/_12sdp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivProfile" />

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:fontFamily="@font/poppins"
        android:includeFontPadding="false"
        android:text="@string/lifespringchurch"
        android:textColor="@color/menu_item_unselected"
        android:textSize="@dimen/_10sdp"
        android:gravity="center"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvName" />

    <TextView
        android:id="@+id/tvFollow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/follow"
        android:textColor="@color/black"
        android:textSize="@dimen/_10sdp"
        android:includeFontPadding="false"
        android:gravity="center"
        android:background="@drawable/round_stroke_with_background"
        android:backgroundTint="@color/divider_grey"
        android:paddingHorizontal="@dimen/_13sdp"
        android:paddingVertical="@dimen/_2sdp"
        android:maxLines="1"
        android:visibility="visible"
        android:ellipsize="end"
        android:layout_marginTop="@dimen/_5sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvUserName" />



</androidx.constraintlayout.widget.ConstraintLayout>