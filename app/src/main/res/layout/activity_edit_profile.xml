            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16sdp"
                android:text="Country"
                android:textColor="@color/light_black"
                android:background="@color/white"
                app:layout_constraintTop_toTopOf="@+id/clLocation"
                app:layout_constraintStart_toStartOf="@+id/clLocation"
                app:layout_constraintBottom_toTopOf="@+id/clLocation"/>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tlBio"
                style="@style/CustomTextInputLayout"
                android:theme="@style/EditTextThemeOverlay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Bio"
                android:elevation="8dp"
                app:hintTextAppearance="@style/TextLabel"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_12sdp"
                app:expandedHintEnabled="false"
                android:textColorHint="@color/light_black"
                app:boxStrokeColor="@color/blue"
                app:boxCornerRadiusBottomEnd="@dimen/_20sdp"
                app:boxCornerRadiusTopEnd="@dimen/_20sdp"
                app:boxCornerRadiusBottomStart="@dimen/_20sdp"
                app:boxCornerRadiusTopStart="@dimen/_20sdp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:cursorColor="@color/cursor_color"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/clLocation">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etPostDesc"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_110sdp"
                    android:layout_marginBottom="10dp"
                    android:paddingTop="20dp"
                    android:textColorHighlight="@color/cursor_color"
                    android:textSize="@dimen/_12sdp"
                    android:gravity="start"
                    android:maxLength="80"
                    android:maxLines="3"
                    android:paddingBottom="@dimen/_30sdp"
                    android:fontFamily="@font/urbanist"
                    android:textColor="@color/black"
                    android:inputType="textMultiLine"
                    android:imeOptions="actionDone"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tvChar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="80 Characters"
                android:fontFamily="@font/urbanist"
                android:textSize="@dimen/_10sdp"
                android:maxLength="80"
                android:textColor="@color/light_black"
                app:layout_constraintEnd_toEndOf="@+id/tlBio"
                app:layout_constraintBottom_toBottomOf="@+id/tlBio"
                android:layout_marginBottom="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_16sdp"/>

            <TextView
                android:id="@+id/tvNamePreference"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_14sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Display Name Preference"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp"
                app:layout_constraintStart_toStartOf="parent"
