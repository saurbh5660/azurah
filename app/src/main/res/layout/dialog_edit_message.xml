            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvMentions"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:visibility="gone"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/tvDescription"
                android:layout_width="0dp"
                android:layout_height="@dimen/_130sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColorHighlight="@color/cursor_color"
                android:layout_marginEnd="@dimen/_16sdp"
                android:fontFamily="@font/poppins"
                android:gravity="top"
                android:layout_marginStart="@dimen/_16sdp"
                android:includeFontPadding="false"
                android:background="@drawable/comment_stroke_with_background"
                android:padding="@dimen/_10sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rvMentions" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/tvReplies"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:includeFontPadding="false"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="@dimen/_12sdp"
                android:paddingVertical="@dimen/_10sdp"
                android:theme="@style/Widget.AppCompat.Button.Borderless"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/round_corner_background"
                android:backgroundTint="@color/button_grey"
                android:text="@string/save_changes"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="@dimen/_2sdp"
                android:enabled="false"
                android:elevation="0dp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:layout_marginEnd="@dimen/_2sdp"
                android:layout_marginStart="@dimen/_16sdp"
                app:layout_constraintEnd_toStartOf="@+id/tvComments"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvDescription" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/tvComments"
                android:layout_width="0dp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_height="@dimen/_40sdp"
                android:includeFontPadding="false"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="@dimen/_12sdp"
                android:paddingVertical="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:background="@drawable/round_corner_background"
                android:backgroundTint="@color/red"
                android:layout_marginStart="@dimen/_2sdp"
                android:elevation="0dp"
                android:layout_marginBottom="@dimen/_2sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="Delete Comment"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/tvReplies"
                app:layout_constraintTop_toBottomOf="@+id/tvDescription" />


