    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvProfileVisibility"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="Account Privacy"
                app:layout_constraintEnd_toEndOf="parent"
                android:fontFamily="@font/urbanist_semibold"
                android:layout_marginTop="@dimen/_16sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_19sdp" />


            <TextView
                android:id="@+id/tvMessage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/poppins"
                android:includeFontPadding="false"
                android:layout_marginHorizontal="@dimen/_24sdp"
                android:text="Control who can view your profile and posts by selecting a public or private account setting."
                android:textColor="@color/black"
                android:gravity="center"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvProfileVisibility"/>


            <TextView
                android:id="@+id/tvPublic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvMessage"
                android:layout_marginTop="@dimen/_30sdp"
                android:includeFontPadding="false"
                android:layout_marginStart="@dimen/_16sdp"
                android:text="Public Account"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp"
                android:fontFamily="@font/poppins_semibold"/>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switcPublichNews"
                style="@style/SwitchCompat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/_15sdp"
                android:checked="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvPublic"
                app:layout_constraintBottom_toBottomOf="@+id/tvPublic"
                app:thumbTint="@color/white"
                app:trackTint="@color/blue"
                android:thumb="@drawable/custom_thumb"
                android:track="@drawable/track_selector" />


            <TextView
                android:id="@+id/tvPublicMessage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:fontFamily="@font/poppins"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:text="Anyone can view your profile and posts."
                android:textColor="@color/black"
                android:gravity="start"
                android:includeFontPadding="false"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvPublic"/>

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:background="@color/divider_grey"
                app:layout_constraintTop_toBottomOf="@+id/tvPublicMessage"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>


            <TextView
                android:id="@+id/tvNewsLetter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view1"
                android:layout_marginTop="@dimen/_16sdp"
                android:includeFontPadding="false"
                android:layout_marginStart="@dimen/_16sdp"
                android:text="Private Account"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp"
                android:fontFamily="@font/poppins_semibold"/>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchNews"
                style="@style/SwitchCompat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/_15sdp"
                android:checked="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvNewsLetter"
                app:layout_constraintBottom_toBottomOf="@+id/tvNewsLetter"
                app:thumbTint="@color/white"
                app:trackTint="@color/blue"
                android:thumb="@drawable/custom_thumb"
                android:track="@drawable/track_selector" />


            <TextView
                android:id="@+id/tvPrivateMessage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:fontFamily="@font/poppins"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:text="Only your followers can see your profile and posts."
                android:textColor="@color/black"
                android:gravity="start"
                android:includeFontPadding="false"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvNewsLetter"/>



