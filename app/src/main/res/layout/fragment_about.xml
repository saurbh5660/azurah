<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.AboutFragment">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nsAllLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16sdp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Country:"
                android:includeFontPadding="false"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_8sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivFlag"
                android:layout_width="@dimen/_26sdp"
                android:layout_height="@dimen/_24sdp"
                android:src="@drawable/flag_afghanistan"
                android:layout_marginStart="@dimen/_8sdp"
                android:elevation="3dp"
                app:layout_constraintStart_toEndOf="@+id/tvLocation"
                app:layout_constraintBottom_toBottomOf="@+id/tvLocation"
                app:layout_constraintTop_toTopOf="@+id/tvLocation"
                android:layout_marginEnd="@dimen/_10sdp"/>

            <View
                android:id="@+id/viewLocation"
                android:layout_width="0dp"
                android:layout_height="@dimen/_25sdp"
                app:layout_constraintStart_toEndOf="@+id/tvLocation"
                app:layout_constraintTop_toTopOf="@+id/tvCountryName"
                android:visibility="visible"
                android:background="@drawable/very_less_round_corner_background"
                android:backgroundTint="@color/white"
                android:layout_marginStart="@dimen/_3sdp"
                app:layout_constraintEnd_toEndOf="@+id/tvCountryName"
                app:layout_constraintBottom_toBottomOf="@+id/tvCountryName"/>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvCountryName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:textColor="@color/black"
                android:includeFontPadding="false"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintEnd_toEndOf="parent"
                android:paddingEnd="@dimen/_8sdp"
                android:layout_marginStart="@dimen/_5sdp"
                app:layout_constraintStart_toEndOf="@+id/ivFlag"
                app:layout_constraintTop_toTopOf="@+id/tvLocation"
                android:layout_marginEnd="@dimen/_16sdp" />

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@color/divider_grey"
                android:layout_marginTop="@dimen/_16sdp"
                app:layout_constraintTop_toBottomOf="@+id/tvCountryName"
                android:layout_marginHorizontal="@dimen/_16sdp"/>

            <TextView
                android:id="@+id/tvInterest"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16sdp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Interests:"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_14sdp"
                app:layout_constraintTop_toBottomOf="@+id/view1"
                app:layout_constraintStart_toStartOf="parent" />

          <!--  <TextView
                android:id="@+id/tvViewAll"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_16sdp"
                android:fontFamily="@font/poppins_medium"
                android:text="View More"
                android:textColor="@color/blue"
                android:textSize="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_16sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view1" />
-->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvInterest"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                android:orientation="vertical"
                app:spanCount="2"
                android:layout_marginTop="@dimen/_6sdp"
                tools:listitem="@layout/item_interest"
                tools:itemCount="6"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvInterest"
                app:layout_constraintEnd_toEndOf="parent" />

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@color/divider_grey"
                android:layout_marginTop="@dimen/_10sdp"
                app:layout_constraintTop_toBottomOf="@+id/rvInterest"
                android:layout_marginHorizontal="@dimen/_16sdp"/>

            <TextView
                android:id="@+id/tvChoosePrompt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_14sdp"
                android:fontFamily="@font/poppins_semibold"
                android:text="@string/choose_prompts_to_answer"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp"
                android:layout_marginHorizontal="@dimen/_16sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view2"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvPrompts"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="vertical"
                tools:listitem="@layout/item_prompt"
                tools:itemCount="1"
                android:layout_marginTop="@dimen/_11sdp"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvChoosePrompt"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <TextView
        android:id="@+id/tvNoDataFound"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:fontFamily="@font/poppins_medium"
        android:textSize="@dimen/_14sdp"
        android:gravity="center"
        android:layout_marginHorizontal="@dimen/_30sdp"
        android:layout_centerInParent="true"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>