<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_200sdp"
    app:cardCornerRadius="@dimen/_16sdp"
    app:cardBackgroundColor="@color/white"
    android:layout_marginVertical="@dimen/_4sdp"
    android:layout_marginHorizontal="@dimen/_16sdp"
    app:strokeColor="@color/white"
    app:cardElevation="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_210sdp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/ivChallange"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_140sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle"
            app:riv_corner_radius="@dimen/_12sdp" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Satellite Mega Festival - 2024"
            android:textColor="@color/black"
            android:includeFontPadding="false"
            android:gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:textSize="@dimen/_13sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!--  <androidx.recyclerview.widget.RecyclerView
              android:id="@+id/ivChallange"
              android:layout_width="match_parent"
              android:layout_height="@dimen/_250sdp"
              app:riv_corner_radius="@dimen/_16sdp"
              android:layout_marginHorizontal="@dimen/_8sdp"
              android:layout_marginTop="@dimen/_8sdp"
              app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
              android:orientation="horizontal"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/tvTitle"
              app:layout_constraintEnd_toEndOf="parent"/>

      -->

        <TextView
            android:id="@+id/tvDesc"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_16sdp"
            android:ellipsize="end"
            android:fontFamily="@font/poppins"
            android:gravity="start"
            android:includeFontPadding="false"
            android:text="Involves abstaining from certaines abstainies abstaining from certain foodes abstaining from certain foodng from certain food foods and following a plant-based diet whilst you focus on seeking God's guidance through prayer."
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivChallange"
            app:layout_constraintTop_toTopOf="@+id/ivChallange" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivTick"
            android:layout_width="@dimen/_32sdp"
            android:layout_height="@dimen/_32sdp"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/unselected_tick_grey"
            android:layout_marginEnd="@dimen/_8sdp"
            android:translationZ="4dp"
            android:layout_marginBottom="@dimen/_13sdp"
            android:padding="@dimen/_3sdp"
            android:contentDescription="@string/app_name"
            app:layout_constraintBottom_toBottomOf="parent"/>


        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:visibility="gone"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginVertical="@dimen/_3sdp"
            android:background="@color/new_divider_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivChallange"
            app:layout_constraintEnd_toEndOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>



</com.google.android.material.card.MaterialCardView>